            <field name="name">Expense Tree View</field>
            <field name="model">event.expense</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="event"/>
                    <!--                    <field name="advance" />-->
                    <!--                    <field name="expense" />-->
                    <!--                    <field name="rem_expense" />-->
                    <!--                    <field name="balance" />-->
