<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="samithi_details_report_wizard_id">
            <field name="name">Samithi Details Report</field>
            <field name="model">samithi.details.report</field>
            <field name="arch" type="xml">
                <form string="Samithi Details Report">
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="event_district"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_samithi_details_report" type="object" string="Print Pdf" class="oe_highlight"/>
                        <button type="object" string="Print Excel" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <template id="samithi_details_report_template">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="col-xs-12" style='font-size:20px'>
                            <center>
                                <b>Samithi Details</b>
                            </center>
                        </div>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Sl No</th>
                                    <th>Samithi</th>
                                    <th>Date</th>
<!--                                    <th>Event District</th>-->
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="sl_no" t-value="0"/>
                                <t t-foreach="o.get_samithi_details_report()" t-as="line">
                                    <tr>
                                        <t t-set="sl_no" t-value="sl_no + 1"/>
                                        <td>
                                            <t t-esc="sl_no"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.place"/>
                                        </td>
                                        <td>
                                            <t t-esc="line.date"/>
                                        </td>
<!--                                        <td>-->
<!--                                            <t t-esc="line.event_district"/>-->
<!--                                        </td>-->
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </template>

        <report id="samithi_details_report" string="Samithi Details Report" model="samithi.details.report" report_type="qweb-pdf" name="samithi_details_report_template"/>

        <record id="action_samithi_details_report" model="ir.actions.act_window">
            <field name="name">Samithi Details Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">samithi.details.report</field>
            <field name="target">new</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="samithi_details_report_wizard_id"/>
        </record>
        <menuitem id="samithi_details_report_menu" parent="submenu_activity_report" name="Samithi Details" sequence="100" action="action_samithi_details_report"/>
    </data>
</openerp>
